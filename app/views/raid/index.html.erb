          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <%= form.submit "Create", class: "btn btn-primary mb-2" %>
      <% end %>
    </div>
    <div class="table-container">
      <table class="table">
        <tbody>
          <% @rarities.each do |rarity|%>
            <tr>
              <td><%= rarity.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

