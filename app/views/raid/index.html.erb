<% provide(:title, 'RSL') %>
<div class="center jumbotron">
  <h1>Raid</h1>
  <p>Home to the RSL!</p>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="form-container">
      <h3>Faction</h3>
      <%= form_with(model: @faction, url: create_faction_path, html: { class: "" }) do |form| %>
        <div class="form-group mb-2 mr-2">
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <%= form.submit "Create", class: "btn btn-primary mb-2" %>
      <% end %>
    </div>
    <div class="table-container">
      <table class="table">
        <tbody>
          <% @factions.each do |faction|%>
            <tr>
              <td><%= faction.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>
  <div class="col-md-6">
    <div class="form-container">
      <h3>Rarity</h3>
      <%= form_with(model: @rarity, url: create_rarity_path, html: { class: "" }) do |form| %>
